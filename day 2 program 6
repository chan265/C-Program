Greatest of Three Numbers

#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() 
{
    int a,b,c;
    scanf("%d%d%d",&a,&b,&c);
    if(a>b && a>c)
    {
        printf("Number1 is maximum with value of %.01f",(float)a);
    }
    else if(b>a && b>c)
    {
        printf("Number2 is maximum with value of %.01f",(float)b);
    }
    else
    {
        printf("Number3 is maximum with value of %.01f",(float)c);
    }
    return 0;
}
