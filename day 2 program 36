Pattern-02

#include <math.h>
#include <stdio.h>
#include <string.h>
#include <stdlib.h>
#include <assert.h>
#include <limits.h>
#include <stdbool.h>

int main() 
{
    int n,i,j;
    scanf("%d", &n);
    if (n > 7) 
    {
        printf("Invalid Input\n");
        return 0;
    }
    for (i = 1; i <= n; i++) 
    {
        for (j = 1; j <= i; j++) 
        {
            printf("%d", j);
        }
        for (j = i - 1; j >= 1; j--) 
        {
            printf("%d", j);
        }
        printf("\n");
    }
    return 0;
}

