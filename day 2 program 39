Pattern

#include <math.h>
#include <stdio.h>
#include <string.h>
#include <stdlib.h>
#include <assert.h>
#include <limits.h>
#include <stdbool.h>

int main() {
    int n;
    scanf("%d", &n);
    for (int i = 1; i <= n; i++) 
    {
        int num = i;
        for (int j = 1; j < i; j++) 
        {
            printf("%d\t", num++);
        }
        printf("1\n");
    }
    for (int i = n-1; i >= 1; i--) 
    {
        int num = i;
        for (int j = 1; j < i; j++) 
        {
            printf("%d\t", num++);
        }
        printf("1\n");
    }
    return 0;
}

