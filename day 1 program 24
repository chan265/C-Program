Area and Perimeter of Triangle

#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() 
{
    int b,h,s1,s2,s3;
    float a,p;
    scanf("%d%d%d%d%d%f%f",&b,&h,&s1,&s2,&s3,&a,&p);
    a=0.5*b*h;
    p=s1+s2+s3;
    printf("Area of Triangle is %.02f\n",a);
    printf("Perimeter of Triangle is %.02f",p);
    return 0;
}
