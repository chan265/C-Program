Binary to Decimal

#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>


int main() 
{
    int d = 0, ba = 1,b, r;
    scanf("%d", &b);
    while (b > 0) 
    {
        r = b % 10;
        d += r * ba;
        ba *= 2;
        b /= 10;
    }
    printf("%d\n", d);
    return 0;
}
