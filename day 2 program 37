Pattern-03

#include <math.h>
#include <stdio.h>
#include <string.h>
#include <stdlib.h>
#include <assert.h>
#include <limits.h>
#include <stdbool.h>

int main() 
{
    int n, i, j;
    scanf("%d", &n);
    for(i = 1; i <= n; i++) 
    {
        for(j = 1; j <= n; j++) 
        {
            if(i == 1 || i == n || j == 1 || j == n)
                printf("*");
            else
                printf(" ");
            if(j != n)
                printf(" ");
        }
        printf("\n");
    }
    return 0;
}
